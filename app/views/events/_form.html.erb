<%= form_with(model: event, local: true, html: {multipart: true}) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :event_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :event_description %>
  </div>

  <div class="field">
    <%= form.label :banner %>
    <%= form.file_field :banner, id: :event_banner %>
  </div>

  <div class="field">
    <%= form.label :webview_link %>
    <%= form.text_field :webview_link, id: :event_webview_link %>
  </div>

  <div class="field">
    <%= link_to "Import attendee", new_event_attendee_import_path(event) unless event.new_record? %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
