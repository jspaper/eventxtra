<%= render "topbar" %>

<div class="container">
  <h1>Events</h1>
  <p id="notice"><%= notice %></p>  
  
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Banner</th>
        <th>Webview link</th>
        <th>Attendee count</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= link_to event.name, event %></td>
          <td><%= event.description %></td>
          <td><%= link_to image_tag(event.banner.url), event_path(event) if event.banner.present? %></td>
          <td><%= link_to event.webview_link, event.webview_link, :target => "_blank" unless event.webview_link.blank? %></td>
          <td><%= event.attendees.size %></td>
          <td>
            <%= link_to 'Edit', edit_event_path(event), :class => "btn btn-default" %>
            <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <div class="row">
    <%= link_to 'New Event', new_event_path %>
  </div>
</div>
