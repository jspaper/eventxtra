<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Banner</th>
      <th>Webview link</th>
      <th>Attendee count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.name, event %></td>
        <td><%= event.description %></td>
        <td><%= image_tag event.banner.url %></td>
        <td><%= link_to event.webview_link, event.webview_link, :target => "_blank" unless event.webview_link.blank? %></td>
        <td><%= event.attendees.size %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

